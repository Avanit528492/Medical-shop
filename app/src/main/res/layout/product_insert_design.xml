<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cardviewborder"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/product_image"
                android:layout_marginLeft="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/imageicon"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:text="name"/>
                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:textColor="#FD0303"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="15dp"
                    android:text="name"/>
                <TextView
                    android:id="@+id/product_offer"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="#fff"
                    android:background="@drawable/saveuptobackground"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="10dp"
                    android:text="name"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="-80dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/product_quantity"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:textColor="#fff"
                    android:background="@drawable/quantity_backgroung"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="10dp"
                    android:text="name"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/arrow"
                    />


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>